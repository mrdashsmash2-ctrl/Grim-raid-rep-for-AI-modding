<?xml version="1.0" encoding="windows-1251" ?>

<game_dialogs>

	<dialog id="raid_order_nimble">
		<precondition>raid_trade.check_nimble_goodwill</precondition>
		<phrase_list>
			<phrase id="0">
				<text>st_raid_nimble_trade</text>
				<next>1</next>
			</phrase>

			<phrase id="1">
				<script_text>raid_trade.get_nimble_str</script_text>
				<action>raid_trade.set_nimble_profile</action>
				<next>21</next>		<!-- trade -->
				<next>22</next>		<!-- back -->
			</phrase>

		    <phrase id="21">
                <text>st_raid_trade</text>
				<action>dialogs.npc_is_trader</action>
				<action>dialogs.break_dialog</action>
            </phrase>

			 <phrase id="22">
                <text>st_raid_back</text>
			 </phrase>

		</phrase_list>
	</dialog>

